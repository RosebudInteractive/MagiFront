@import "../fonts/fonts"
.ctl-buttons
  display float
  float left
  z-index 2
  position absolute
  width 20em
body, html
  padding 0
  margin 0
  height 100%
  div
    user-select none
.ws-container
  width 100%
  height 100%
  background-color #e7e7e7
  padding-left: 20em;
  box-sizing: border-box;
.ws-container-mini
  display float
  float right
  position absolute
  width 200px
  height 150px
  top 100px
  background-color #e7e7e7
.text-content
  width 100%
  height 300px
  overflow-x hidden
  overflow-y auto
  ul
    width 100%
  div
    width 100%
    font-size 16px
    font-weight 600
    

