@import "./simple-controls"

body
html
#root
  margin 0
  height 100%
.app
  font 12px sans-serif
  display flex
  flex-direction row
  height 100%
  div
    box-sizing border-box
  .left
    width 20em
    position relative
  .tollbar
    width 100%
  .top-bar-size
    height 5em
  .logo-sidebar
    text-align center
    display block
    top 0px
    background-color #424b5f
    height 100%
    color #ffffff
    font-size 2em
    position relative
    div
      position absolute
      top 50%
      transform translate(50%, -50%)
  .main-menu
    height 100%
    list-style none
    padding-top 0.5em
    .menu-item
      position relative
      background transparent
      .link
        display inline-block
        width 100%
        height 2.8571em
        padding 0 1.25em
        line-height 3em
        font-size 14px
        color #a7b3cb
        transition .2s ease-out
        &:hover
          background #424b5f
          text-decoration none
          color #fff
      .link.open
        background #424b5f
        text-decoration none
        color #fff
        &:after
          border-left 4px solid #1ba8ed
          content ''
          display block
          height 100%
          left 0
          position absolute
          top 0
  .bar-bgcolor
    background-color #4f5a6e
  .right
    flex 1 1 100px
  .right-container
    width 100%
    height 100%
    display flex
    flex-direction column
  .right-top
    flex none
  .main-area
    flex 1 1 100px
    width 100%
  .page
    width 100%
    height 100%
    overflow-y auto
    padding 1em
    position relative
  .action-bar
    flex none
    height 4em
    width 100%
  .episodes
    width 100%
    height 100%
    .episodes-content
      width 100%
      height 100%
      display flex
      flex-direction column
    .grid-container
      flex 1 1 100px
      width 100%
      overflow-y auto
    .grid
      width 100%
      height auto
  .dlg
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    .dlg-bg
      position absolute
      float left
      width 100%
      height 100%
      background #000000
      opacity 0.6
    .dlg-window
      position: relative;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff;
      top: 50%;
      width: 300px;
    .dlg-btn-bar
      padding 1em
      text-align right
      .btn
        margin-left 0.5em
    .dlg-message
      padding 1em 1em 0 1em
      font-size 16px
      font-weight 600

