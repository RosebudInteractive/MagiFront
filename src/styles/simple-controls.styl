.btn
  border none
  border-radius 2px
  display inline-block
  height 2.5714em
  line-height 2.5714em
  font-size 14px
  outline 0
  padding 0 2rem
  vertical-align middle
  color #fff
  background-color #6383a8
  text-align center
  transition .2s ease-out
  cursor pointer
  &:hover
    background-color: #6d8cb0
.btn.disabled
    background-color #a7b3cb
    color #656565
/* HTML5 display-role reset for older browsers */
article
aside
details
figcaption
figure
footer
header
hgroup
menu
nav
section
  display block
h3
  font-size 22px
  margin 10px 0 0
table
  border-collapse collapse
  border-spacing 0
ol
ul
  list-style none
blockquote
q
  quotes none
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}



